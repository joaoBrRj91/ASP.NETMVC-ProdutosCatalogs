@model IEnumerable<CatalogoProdutos.Domain.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@{
    if (TempData["invalido"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["invalido"]
        </div>
    }
    else if (TempData["valido"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["valido"]
        </div>
    }
}

<p>
    @Html.ActionLink("Novo usuário", "CriarUsuario")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioAcesso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioAcesso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
